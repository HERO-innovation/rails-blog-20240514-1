<div class="container mt-5">
  <h1>記事一覧</h1>
  <table class="table">
    <thead>
      <tr>
        <th>ID</th>
        <th>タイトル</th>
        <th>内容</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.content %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to '新規作成', new_post_path, class: 'btn btn-primary' %>
</div>
