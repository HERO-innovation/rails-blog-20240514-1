<div class="container mt-5">
  <h1>記事作成</h1>
  <%= form_for @post do |f| %>
  <div class="form-group">
      <%= f.label :title, "タイトル" %>
      <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="form-group">
      <%= f.label :content, "内容" %>
      <%= f.text_area :content, class: 'form-control' %>
  </div>
  <%= f.submit '保存', class: 'btn btn-primary' %>
  <% end %>
</div>
